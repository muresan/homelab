#!/bin/bash

<%= node['linux']['chef']['file_header'] %>

SLACK_USER="$1"
SLACK_CHANNEL="$2"
SLACK_EMOJI="$3"
SLACK_API_PATH="$4"
SLACK_MESSAGE="$5"

curl -X POST --data-urlencode "payload={\"channel\": \"${SLACK_CHANNEL}\", \"username\": \"${SLACK_USER}\", \"text\": \"${SLACK_MESSAGE}\", \"icon_emoji\": \"${SLACK_EMOJI}\"}" "https://hooks.slack.com/services/${SLACK_API_PATH}" >/dev/null 2>&1
