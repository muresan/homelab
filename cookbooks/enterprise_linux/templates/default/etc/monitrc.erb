<%= node['linux']['chef']['file_header'] %>

include /etc/monit.d/*

set daemon  <%= node['linux']['monit']['interval'] %>

set eventqueue
   basedir /var/monit
   slots <%= node['linux']['monit']['slots'] %>

set httpd port <%= node['linux']['monit']['http']['listen_port'] %> and
    use address <%= node['linux']['monit']['http']['listen_address'] %>
    allow localhost
    allow <%= node['linux']['monit']['http']['user'] %>:<%= @password %>
