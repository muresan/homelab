<%= node['provisioner']['file_header'] %>

function notify() {
  curl -X POST --data-urlencode "payload={\"channel\": \"<%= node['provisioner']['slack_channel'] %>\", \"username\": \"<%= node['provisioner']['kickstart_name'] %>\", \"text\": \"$1\", \"icon_emoji\": \"<%= node['provisioner']['kickstart_emoji'] %>\"}" "https://hooks.slack.com/services/<%= node['provisioner']['api_path'] %>" >/dev/null 2>&1
}
